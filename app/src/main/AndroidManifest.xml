<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phacsin.carchase">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".details.DetailActivity"/>
        <activity android:name=".FilterActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".details.ViewPagerSpecs"/>
        <activity android:name=".tab.VersionDetails"/>

        <activity android:name=".CompareActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".FilterPriceResultActivity"
            android:parentActivityName=".FilterActivity"/>
        <activity android:name=".FilterFuelResultActivity"
            android:parentActivityName=".FilterActivity"/>
        <activity android:name=".FilterStyleResultActivity"
            android:parentActivityName=".FilterActivity"/>
    </application>

</manifest>