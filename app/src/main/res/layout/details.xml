<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"

    >

    <!--<include layout="@layout/toolbar"></include>-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
       >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:orientation="vertical">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/foodb"
                />

<ImageView
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/arrows"
    android:padding="10dp"/>
</FrameLayout>
            <!--//Description-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:orientation="vertical"

                >

<customfonts.MyTextView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Italian Chocolate "
    android:maxLines="2"
    android:textSize="24dp"
    android:textColor="@color/colortitletext"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"/>





                <RatingBar
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5"
                    android:layout_marginTop="10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:backgroundTint="@color/ratingbar"
                    android:secondaryProgressTint="@color/ratingbar"
                    android:progressTint="@color/ratingbar"


                    />
                <customfonts.MyTextView
                    android:id="@+id/description"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:letterSpacing="0.04"
                    android:lineSpacingExtra="0.5dp"
                    android:textColor="@color/colorheadtext"
                    android:text="A popular and fine Italian chocolate is “cioccolato di Modica,” made in Sicily. "/>

                <customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add To This Order"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp"/>

            </LinearLayout>






                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <include layout="@layout/burgerfood"></include>
                    <include layout="@layout/cakefood"></include>
                    <include layout="@layout/cupcakefood"></include>
                    <include layout="@layout/pastafood"></include>
                    <include layout="@layout/noodlesfood"></include>
                    </LinearLayout>
                </HorizontalScrollView>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorwhite">


    <com.phacsin.carchase.details.ExpandableHeightListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview">

    </com.phacsin.carchase.details.ExpandableHeightListView>

</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorwhite"
                android:padding="10dp"
                android:layout_marginTop="5dp"

                >


                <customfonts.MyEditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
android:textColor="@color/colortitletext"
                    android:background="@drawable/rectgray"
                    android:padding="10dp"
                    android:textSize="10dp"
                    android:textColorHint="@color/colortitletext"
android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"




                    />
                <customfonts.MyTextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:background="@drawable/rectbackgroundblue"
                    android:padding="11dp"
                    android:textColor="@color/colorgreen"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>


        </LinearLayout>



    </ScrollView>




</LinearLayout>
