<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--<include layout="@layout/toolbar"></include>-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
       >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:orientation="vertical">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/car"
                />

<ImageView
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/arrows"
    android:padding="10dp"/>
</FrameLayout>
            <!--//Description-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:orientation="vertical"

                >

            <customfonts.MyTextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMW 3 Series"
                android:maxLines="2"
                android:textSize="24dp"
                android:textColor="@color/colortitletext"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>





                <RatingBar
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5"
                    android:layout_marginTop="10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:backgroundTint="@color/ratingbar"
                    android:secondaryProgressTint="@color/ratingbar"
                    android:progressTint="@color/ratingbar"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/rupees_detials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rupees"/>
                    <customfonts.MyTextView
                        android:id="@+id/description"
                        android:layout_toRightOf="@+id/rupees_detials"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="0.5dp"
                        android:textColor="@color/colorheadtext"
                        android:text="37.87 L"/>
                        <customfonts.MyTextView
                            android:id="@+id/avgexprice"
                            android:layout_toRightOf="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:letterSpacing="0.04"
                            android:lineSpacingExtra="0.5dp"
                            android:textColor="@color/colorheadtext"
                            android:text="(Ex-Showroom ,"/>
                        <customfonts.MyTextView
                            android:id="@+id/exshowroom"
                            android:layout_toRightOf="@+id/avgexprice"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="2sp"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:letterSpacing="0.04"
                            android:lineSpacingExtra="0.5dp"
                            android:textColor="@color/colorheadtext"
                            android:text="Kochi)"/>
                    </RelativeLayout>
                </LinearLayout>
                <customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Petrol"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"/>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/checkonroad_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/blue"
                    android:background="@drawable/corner_radius"
                    android:text="Check On-Road Price"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/emi_text"
                            android:text="EMI Available"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"/>
                            <Button
                                android:layout_width="70sp"
                                android:layout_height="30sp"
                                android:layout_toRightOf="@+id/emi_text"
                                android:background="@drawable/emi"
                                android:layout_marginLeft="10sp"
                                android:text="EMI"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                <customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colours Available :-"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/button_color_one"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/button_details_one"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/button_color_two"
                        android:layout_toRightOf="@+id/button_color_one"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/button_details_two"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/button_color_three"
                            android:layout_toRightOf="@+id/button_color_two"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/button_details_three"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/button_color_four"
                            android:layout_toRightOf="@+id/button_color_three"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/button_details_four"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/button_color_five"
                            android:layout_toRightOf="@+id/button_color_four"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/button_details_five"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/button_color_six"
                            android:layout_toRightOf="@+id/button_color_five"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/button_details_six"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/button_color_seven"
                            android:layout_toRightOf="@+id/button_color_six"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/button_details_seven"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue"/>
            </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <include layout="@layout/burgerfood"></include>
                    <include layout="@layout/cakefood"></include>
                    <include layout="@layout/cupcakefood"></include>
                    <include layout="@layout/pastafood"></include>
                    <include layout="@layout/noodlesfood"></include>
                    </LinearLayout>
                </HorizontalScrollView>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorwhite">


    <com.phacsin.carchase.details.ExpandableHeightListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview">

    </com.phacsin.carchase.details.ExpandableHeightListView>

</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorwhite"
                android:padding="10dp"
                android:layout_marginTop="5dp"

                >


                <customfonts.MyEditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colortitletext"
                    android:background="@drawable/rectgray"
                    android:padding="10dp"
                    android:textSize="10dp"
                    android:textColorHint="@color/colortitletext"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"




                    />
                <customfonts.MyTextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:background="@drawable/rectbackgroundblue"
                    android:padding="11dp"
                    android:textColor="@color/colorgreen"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>


        </LinearLayout>



    </ScrollView>




</LinearLayout>
